<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y215"
        android:background="@color/w0"
        android:paddingLeft="@dimen/x61"
        android:paddingRight="@dimen/x61">

        <com.mianan.utils.view.customView.CirecleImage
            android:id="@+id/headImage"
            android:layout_width="@dimen/y152"
            android:layout_height="@dimen/y152"
            android:layout_centerVertical="true"
            android:background="@color/g0" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x39"
            android:layout_toRightOf="@id/headImage"
            android:textColor="@color/b333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/b333333"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>