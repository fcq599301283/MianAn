<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w0">

    <FrameLayout
        android:id="@+id/timeLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y72">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/circle_ye" />

        <com.mianan.utils.view.customView.CirecleImage
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x22"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x16"
            android:background="@color/yeff" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/b0"
            android:textSize="23sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/today_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeLay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y60"
        android:text="今日累计时间:2:30:04"
        android:textColor="@color/b0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/today_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/today_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y40"
        android:text="今日累计积分:150分"
        android:textColor="@color/b0"
        android:textSize="12sp" />

</RelativeLayout>