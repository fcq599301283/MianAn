<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y262"
            android:src="@mipmap/mian_an" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y80"
            android:src="@mipmap/backgroud" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/accountInputLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x112"
        android:layout_marginRight="@dimen/x112"
        android:layout_marginTop="@dimen/y760"
        android:background="@drawable/retangle_5dp_grayback"
        android:paddingBottom="@dimen/y44"
        android:paddingLeft="@dimen/x62"
        android:paddingRight="@dimen/x62"
        android:paddingTop="@dimen/y44">

        <TextView
            android:id="@+id/accontText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账号"
            android:textColor="@color/b0"
            android:textSize="12sp" />

        <com.mianan.utils.view.customView.ClearableEditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/accontText"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="6dp"
            android:textColor="@color/b0"
            android:textCursorDrawable="@drawable/cursor_blue4"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passwordInputLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountInputLay"
        android:layout_marginLeft="@dimen/x112"
        android:layout_marginRight="@dimen/x112"
        android:layout_marginTop="@dimen/y24"
        android:background="@drawable/retangle_5dp_grayback"
        android:paddingBottom="@dimen/y44"
        android:paddingLeft="@dimen/x62"
        android:paddingRight="@dimen/x62"
        android:paddingTop="@dimen/y44">

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textColor="@color/b0"
            android:textSize="12sp" />

        <com.mianan.utils.view.customView.ClearableEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/passwordText"
            android:background="@null"
            android:inputType="textWebPassword"
            android:maxLength="16"
            android:paddingLeft="6dp"
            android:textColor="@color/b0"
            android:textCursorDrawable="@drawable/cursor_blue4"
            android:textSize="12sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordInputLay"
        android:layout_marginLeft="@dimen/x112"
        android:layout_marginRight="@dimen/x112"
        android:layout_marginTop="@dimen/y160"
        android:background="@drawable/retangle_5dp_yellowback"
        android:paddingBottom="@dimen/y44"
        android:paddingTop="@dimen/y44"
        android:text="登录"
        android:textColor="@color/b0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/findpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/y144"
        android:paddingLeft="@dimen/x116"
        android:text="无法登陆?"
        android:textColor="@color/b0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/y144"
        android:paddingRight="@dimen/x116"
        android:text="注册"
        android:textColor="@color/b0"
        android:textSize="14sp" />

</RelativeLayout>