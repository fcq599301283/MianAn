<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y215"
        android:background="@color/w0"
        android:paddingLeft="@dimen/x61"
        android:paddingRight="@dimen/x61">

        <com.miandui.utils.view.customView.CirecleImage
            android:id="@+id/head"
            android:layout_width="@dimen/y152"
            android:layout_height="@dimen/y152"
            android:layout_centerVertical="true"
            android:background="@color/g0" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x39"
            android:layout_toRightOf="@id/head"
            android:textColor="@color/b333333"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/refuse"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/retangle_5dp_yellowback"
                android:text="拒绝" />

            <TextView
                android:id="@+id/agree"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x48"
                android:background="@drawable/retangle_5dp_yellowback"
                android:text="同意" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>