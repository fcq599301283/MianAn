<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titleBack"
    android:orientation="vertical">

    <include layout="@layout/util_title_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1080"
                android:background="@color/w0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y150"
                android:layout_marginTop="@dimen/y5"
                android:background="@color/w0"
                android:paddingLeft="@dimen/x61"
                android:paddingRight="@dimen/x61"
                android:paddingTop="@dimen/y30">

                <TextView
                    android:id="@+id/goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/b0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/yeff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/originalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/y5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/g0"
                    android:textSize="11sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:background="@color/w0"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x61">

                <TextView
                    android:id="@+id/goodsInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y30"
                    android:textColor="@color/b0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y30"
                    android:layout_marginTop="@dimen/y15"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/b0"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordInputLay"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y16"
                android:background="@drawable/retangle_5dp_yellowback"
                android:paddingBottom="@dimen/y44"
                android:paddingTop="@dimen/y44"
                android:text="购买优惠券"
                android:textColor="@color/b0"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>