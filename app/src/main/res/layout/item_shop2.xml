<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x530"
        android:background="@color/w0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y165"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/w0"
        android:paddingLeft="@dimen/x30"
        android:paddingTop="@dimen/y32">

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/b0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/goodsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shopName"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/x20"
            android:singleLine="true"
            android:textColor="@color/g0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y27"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/g0"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>